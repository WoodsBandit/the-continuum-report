# =============================================================================
# The Continuum Report - Environment Configuration (WoodsDen Local)
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# PAPERLESS-NGX CONFIGURATION (WoodsDen Docker)
# =============================================================================

# Paperless server URL (local Docker container)
PAPERLESS_URL=http://localhost:8040

# API Token - REQUIRED
# Get from: Paperless Admin > Settings > API Token
# Default for WoodsDen setup: continuum2026 (change in production!)
PAPERLESS_TOKEN=your-api-token-here

# Request timeout in seconds (default: 30)
PAPERLESS_TIMEOUT=30

# =============================================================================
# OLLAMA CONFIGURATION (WoodsDen Local - Optional)
# =============================================================================

# Ollama server URL (install with: winget install Ollama.Ollama)
OLLAMA_URL=http://localhost:11434

# Model to use for inference (default: mistral)
OLLAMA_MODEL=mistral

# Context window size - lower = less RAM usage (default: 1024)
OLLAMA_CONTEXT_SIZE=1024

# Request timeout in seconds (default: 600 = 10 minutes)
OLLAMA_TIMEOUT=600

# =============================================================================
# DIRECTORY CONFIGURATION (WoodsDen)
# =============================================================================

# Base directory for all Continuum data
CONTINUUM_BASE_DIR=C:/Users/Xx LilMan xX/Documents/Claude Docs/Continuum

# Data storage on Z: drive
PAPERLESS_DATA_DIR=Z:/paperless
SOURCE_ARCHIVES_DIR=Z:/continuum-sources
BACKUPS_DIR=Z:/backups

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Document limits (default: 9999 = no practical limit)
MAX_DOCUMENTS_TO_SEARCH=9999
MAX_DOCUMENTS_FOR_ENTITIES=9999
MAX_DOCUMENTS_FOR_DOSSIER=9999

# Text chunking (characters per chunk, default: 1500)
MAX_CHUNK_SIZE=1500

# =============================================================================
# MEMORY SAFETY (WoodsDen has 48GB RAM - can be more aggressive)
# =============================================================================

# Delay between processing documents (seconds)
DELAY_BETWEEN_DOCS=5

# Delay between batch of 5 documents (seconds)
DELAY_BETWEEN_BATCHES=15

# Unload Ollama model every N documents
UNLOAD_MODEL_EVERY=20

# =============================================================================
# WEBSITE CONFIGURATION
# =============================================================================

# Public website base URL
WEBSITE_BASE_URL=https://thecontinuumreport.com

# Local dev URL
LOCAL_DEV_URL=http://localhost:8081

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log format: console (pretty) or json (structured) (default: console)
LOG_FORMAT=console
