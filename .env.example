# The Continuum Report - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Paperless-ngx Document Management System
PAPERLESS_URL=http://192.168.1.139:8040
PAPERLESS_TOKEN=your_paperless_token_here

# Ollama Local LLM Server
OLLAMA_URL=http://192.168.1.139:11434
OLLAMA_MODEL=mistral

# =============================================================================
# DIRECTORY PATHS
# =============================================================================

# Output directories (adjust for your system)
OUTPUT_DIR=/mnt/user/continuum/documents/inbox
DOSSIER_DIR=/mnt/user/continuum/reports
CHECKPOINT_DIR=/mnt/user/continuum/checkpoints
BRIEFS_DIR=/continuum/briefs
DATA_DIR=/continuum/data

# Website configuration
WEBSITE_BASE_URL=https://thecontinuumreport.com

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================

# Document processing limits
MAX_DOCUMENTS_TO_SEARCH=9999
MAX_DOCUMENTS_FOR_ENTITIES=9999
MAX_DOCUMENTS_FOR_DOSSIER=9999
MAX_CHUNK_SIZE=1500

# Memory safety settings (for 16GB RAM)
DELAY_BETWEEN_DOCS=10
DELAY_BETWEEN_BATCHES=30
OLLAMA_CONTEXT_SIZE=1024
OLLAMA_TIMEOUT=600
UNLOAD_MODEL_EVERY=10

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=INFO
LOG_DIR=/continuum/logs
LOG_FORMAT=json

# =============================================================================
# OPTIONAL: SMB/NETWORK MOUNTS
# =============================================================================

# WoodsDen Windows machine (if applicable)
# WOODSDEN_HOST=192.168.1.94
# WOODSDEN_SHARE=shared
# WOODSDEN_CREDENTIALS_FILE=/root/.woodsden-creds
