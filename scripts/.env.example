# =============================================================================
# The Continuum Report - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# PAPERLESS-NGX CONFIGURATION
# =============================================================================

# Paperless server URL (include port if non-standard)
PAPERLESS_URL=http://192.168.1.139:8040

# API Token - REQUIRED
# Get from: Paperless Admin > Settings > API Token
# IMPORTANT: Rotate this token if it was ever exposed in source control!
PAPERLESS_TOKEN=your-api-token-here

# Request timeout in seconds (default: 30)
PAPERLESS_TIMEOUT=30

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama server URL
OLLAMA_URL=http://192.168.1.139:11434

# Model to use for inference (default: mistral)
OLLAMA_MODEL=mistral

# Context window size - lower = less RAM usage (default: 1024)
OLLAMA_CONTEXT_SIZE=1024

# Request timeout in seconds (default: 600 = 10 minutes)
OLLAMA_TIMEOUT=600

# =============================================================================
# DIRECTORY CONFIGURATION
# =============================================================================

# Base directory for all Continuum data
# All other directories are relative to this
CONTINUUM_BASE_DIR=/continuum

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Document limits (default: 9999 = no practical limit)
MAX_DOCUMENTS_TO_SEARCH=9999
MAX_DOCUMENTS_FOR_ENTITIES=9999
MAX_DOCUMENTS_FOR_DOSSIER=9999

# Text chunking (characters per chunk, default: 1500)
MAX_CHUNK_SIZE=1500

# =============================================================================
# MEMORY SAFETY (for 16GB RAM systems)
# =============================================================================

# Delay between processing documents (seconds, default: 10)
DELAY_BETWEEN_DOCS=10

# Delay between batch of 5 documents (seconds, default: 30)
DELAY_BETWEEN_BATCHES=30

# Unload Ollama model every N documents (default: 10)
UNLOAD_MODEL_EVERY=10

# =============================================================================
# WEBSITE CONFIGURATION
# =============================================================================

# Public website base URL (for generating links)
WEBSITE_BASE_URL=https://thecontinuumreport.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log format: console (pretty) or json (structured) (default: console)
LOG_FORMAT=console

# Optional log file path (default: stdout only)
# LOG_FILE=/var/log/continuum/app.log
